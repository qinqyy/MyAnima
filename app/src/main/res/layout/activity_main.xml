<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yongyi.myanima.ViewActivity"
    android:orientation="vertical"
    >

    <TextView
        android:clickable="true"
        android:onClick="onClick"
        android:id="@+id/rotate"
        android:background="#dcf1ec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旋转角度" />
    <TextView
        android:clickable="true"
        android:onClick="onClick"
        android:id="@+id/scale"
        android:layout_marginTop="20dp"
        android:background="#e4dcf1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="缩放程度" />
    <TextView
        android:clickable="true"
        android:onClick="onClick"
        android:id="@+id/translate"
        android:layout_marginTop="20dp"
        android:background="#d7d6c0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="偏移度" />
    <TextView
        android:clickable="true"
        android:onClick="onClick"
        android:id="@+id/alpha"
        android:layout_marginTop="20dp"
        android:background="#dcc0c0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清晰度" />
    <TextView
        android:textColor="#ffffff"
        android:id="@+id/all"
        android:layout_marginTop="20dp"
        android:background="#030303"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="集合" />

    <Button
        android:onClick="onClick"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/bnt_run"
        android:text="运行集合"
        android:layout_width="90dp"
        android:layout_height="40dp" />
    <ImageView
        android:onClick="onClick"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageview"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:onClick="onClick"
            android:id="@+id/frame_bnt"
            android:text="帧动画"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="onClick"
            android:id="@+id/property_bnt"
            android:text="属性动画"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
